<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.qiudaozhang.hibernate5.model">


    <class name="Address" >
        <id name="aid">
            <generator class="native"/>
        </id>
        <property name="city"/>
        <join table="address_person" optional="true">
            <key column="aid" unique="true"></key>
            <many-to-one name="person" column="pid" unique="true"></many-to-one>
        </join>
    </class>

    <class name="Person">
         <id name="pid">
             <generator class="native"/>
         </id>
        <property name="name"/>
        <join table="address_person" optional="true">
            <key column="pid" unique="true"></key>
            <many-to-one name="address" column="aid" unique="true" ></many-to-one>
        </join>
    </class>

</hibernate-mapping>