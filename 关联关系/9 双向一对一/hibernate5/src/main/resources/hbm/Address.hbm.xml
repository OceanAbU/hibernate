<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.qiudaozhang.hibernate5.model">


    <class name="Address" >
        <id name="aid">
            <generator class="native"/>
        </id>
        <property name="city"/>
        <one-to-one name="person" property-ref="address"></one-to-one>
    </class>

    <class name="Person">
         <id name="pid">
             <generator class="native"/>
         </id>
        <property name="name"/>
        <many-to-one name="address" column="aid" class="Address" unique="true"></many-to-one>
    </class>

</hibernate-mapping>