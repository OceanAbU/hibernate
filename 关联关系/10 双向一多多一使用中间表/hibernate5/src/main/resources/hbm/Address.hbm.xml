<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.qiudaozhang.hibernate5.model">


    <class name="Address" >
        <id name="aid">
            <generator class="native"/>
        </id>
        <property name="city"/>

        <join table="address_person">
            <key column="aid"></key>
            <many-to-one name="person" class="Person" column="pid"  />
        </join>
    </class>

    <class name="Person">
         <id name="pid">
             <generator class="native"/>
         </id>
        <property name="name"/>
        <set name="addresses" table="address_person">
            <key column="pid"></key>
            <many-to-many class="Address" column="aid" unique="true"/>
        </set>
    </class>

</hibernate-mapping>