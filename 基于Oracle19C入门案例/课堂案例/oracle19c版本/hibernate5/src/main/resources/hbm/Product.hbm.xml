<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!--书写hibernate的 model 和 数据库表的映射文件-->
<hibernate-mapping>

<!--    类和表是一一对应
    类字段和表里面列一一对应
-->
    <class name="com.qiudaozhang.hibernate5.model.Product" >
        <id name="id">
            <generator class="sequence"></generator>
        </id>
        <property name="name"/>
        <property name="price"/>
    </class>
</hibernate-mapping>